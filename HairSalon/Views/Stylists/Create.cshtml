@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.LabelFor(model => model.Clients)
  @Html.DropDownList("ClientId")

  <input type="submit" value="Add new Stylist" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all stylists", "Index")</p>